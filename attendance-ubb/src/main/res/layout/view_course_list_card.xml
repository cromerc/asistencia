<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/course_card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="@color/colorPrimaryDark"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/course_section_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/courses_section"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/course_section"
            android:layout_toEndOf="@id/course_section_text"
            android:layout_toRightOf="@id/course_section_text"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/course_year"
            android:layout_below="@id/course_section_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_toEndOf="@id/course_year"
            android:layout_toRightOf="@id/course_year"
            android:layout_below="@id/course_section_text"
            android:id="@+id/course_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/courses_separator"
            android:textSize="12sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_toEndOf="@id/course_separator"
            android:layout_toRightOf="@id/course_separator"
            android:layout_below="@id/course_section_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_semester"
            android:textSize="12sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_id"
            android:visibility="invisible"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>